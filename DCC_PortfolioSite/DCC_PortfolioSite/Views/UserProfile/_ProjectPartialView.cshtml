@model DCC_PortfolioSite.Models.ProjectSpotlight

<div>
    <div class="row flip page_text_color">
        @*foreach ()*@
        
            <div class="card">
               
                <!--Title Row-->
                <div class="row">
                    <div class="col-xs-10 col-sm-10 col-sm-offset-1">
                        <h4 align="center">@Html.DisplayFor(model => model.ProjectName)</h4>
                        <hr />
                        <table style="width:100%" cellpadding="2">
                            <tr>
                                <td align="right">@Html.DisplayNameFor(model => model.Technologies): </td>
                                <td>
                                    @{
                                        string[] technologyList = Model.Technologies.Split();
                                        foreach (string technology in technologyList)
                                        {
                                            <span class="badge">@technology.Trim(',')</span>
                                        }
                                    }
                                </td>                        
                            </tr>
                            <tr>
                                <td align ="right">@Html.DisplayNameFor(model => model.TeamMembers): </td>
                                <td>
                                    @if (Model.TeamMembers != null)
                                    {
                                        foreach (var teamMember in Model.TeamMembers)
                                        {
                                            <span>@teamMember.ProfileID</span>
                                            <br />
                                        }
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td align="right">@Html.DisplayNameFor(model => model.DevelopmentTime): </td>
                                <td>@Html.DisplayFor(model => model.DevelopmentTime)</td>
                            </tr>
                        </table>
                        <hr />
                    </div>
                </div>

                <!--Description Row-->
                <div class="row">
                    <div class="col-xs-10 col-sm-10 col-sm-offset-1">
                        @if (!String.IsNullOrEmpty(@Model.Image_1))
                        {
                            <img class="media-object thumbnail img_upper_left" src=@Model.Image_1 height="200" width="200" align="left" />
                        }
                        @if (!String.IsNullOrEmpty(@Model.Image_2))
                        {
                            <img class="media-object thumbnail img_lower_right" src=@Model.Image_2 height="200" width="200" align="right" />
                        }                        
                        @if (!String.IsNullOrEmpty(@Model.ProjectDescription))
                        {
                            @Html.DisplayFor(model => model.ProjectDescription)
                        }
                    </div>
                </div>

                <!--GitHub Link Row-->
                <div class="row">
                    <div class="col-xs-10 col-sm-10 col-sm-offset-1">
                        <h4>@Html.DisplayFor(model => model.RepoLink)</h4>
                    </div>
                </div>
                
               
            </div>            
        
    </div>
</div>


