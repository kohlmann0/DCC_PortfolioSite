@model DCC_PortfolioSite.Models.UserProfileViewModels

<div>
    @if (@Model.ResumeHtmlUpload != null & @Model.ShowResume == true)
    {
    <h4>Resume of @Model.FullName</h4>
    <hr />
    <div class='responsiveIframe'>
        <iframe class="container-fluid" src=@Model.ResumeHtmlUpload.HtmlUpload></iframe>
    </div>
    <br />
    }
    else
    {
        <p> I'm sorry, @Model.FullName has chosen not to display a resume yet. Please check back later.</p>
    }
</div>
