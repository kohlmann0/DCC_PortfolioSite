@model DCC_PortfolioSite.Models.UserProfileViewModels

<div class="page_text_color">
    <div class="row page_text_color">
        @if (Model.ShowProfilePhoto)
        {
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                Insert Photo Here
            </div>
        }

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
            <h4>@Html.DisplayFor(model => model.FullName)</h4>
            <hr />
            @if (Model.ShowAddress)
            {
                <p>
                    @Html.DisplayFor(model => model.Address)<br />
                    @Html.DisplayFor(model => model.City), @Html.DisplayNameFor(model => model.State), @Html.DisplayFor(model => model.Country) @Html.DisplayFor(model => model.Zip)
                </p>
            }
            @if (Model.ShowPrimaryPhone | Model.ShowAlternatePhone)
            {
                <p>
                    @if (Model.ShowPrimaryPhone)
                    {
                        <muted-text>@Html.DisplayNameFor(model => model.PrimaryPhone):</muted-text> @Html.DisplayFor(model => model.PrimaryPhone)<br />
                    }
                    @if (Model.ShowAlternatePhone)
                    {
                        <muted-text>@Html.DisplayNameFor(model => model.AlternatePhone):</muted-text> @Html.DisplayFor(model => model.AlternatePhone)<br />
                    }
                </p>
            }
            @if (Model.ShowPrimaryEmail | Model.ShowAlternateEmail)
            {
                <p>
                    @if (Model.ShowPrimaryEmail)
                    {
                        <muted-text>@Html.DisplayNameFor(model => model.PrimaryEmail):</muted-text> @Html.DisplayFor(model => model.PrimaryEmail)<br />
                    }
                    @if (Model.ShowAlternateEmail)
                    {
                        <muted-text>@Html.DisplayNameFor(model => model.AlternateEmail):</muted-text> @Html.DisplayFor(model => model.AlternateEmail)<br />
                    }
                </p>
            }

        </div>
        
    </div>
    <hr />
    @if (Model.ShowLinkInProfile | Model.ShowGitHubProfile | Model.ShowPersonalWebsite)
    {
        <p>
            @if (Model.ShowLinkInProfile)
            {
                <muted-text>@Html.DisplayNameFor(model => model.LinkInProfile):</muted-text> @Html.DisplayFor(model => model.LinkInProfile)<br />
            }
            @if (Model.ShowGitHubProfile)
            {
                <muted-text>@Html.DisplayNameFor(model => model.GitHubProfile):</muted-text> @Html.DisplayFor(model => model.GitHubProfile)<br />
            }
            @if (Model.ShowPersonalWebsite)
            {
                <muted-text>@Html.DisplayNameFor(model => model.PersonalWebsite):</muted-text> @Html.DisplayFor(model => model.PersonalWebsite)<br />
            }

        </p>
    }




    @if (Model.ShowAvailableForWorkMessage)
    {
        <div class="row page_text_color">
            <div class="col-xs-12">
                <strong>@Html.DisplayNameFor(model => model.AvailableForWorkMessage)</strong><br />
                @Html.DisplayFor(model => model.AvailableForWorkMessage)<br />
                <br />
            </div>
        </div>
    }

    @if (Model.ShowHireByMessage)
    {
        <div class="row page_text_color">
            <div class="col-xs-12">
                <strong>@Html.DisplayNameFor(model => model.HireByMessage)</strong><br />
                @Html.DisplayFor(model => model.HireByMessage)<br />
                <br />
            </div>
        </div>
    }

    @if (Model.ShowCurrentlyWorkingOnMessage)
    {
        <div class="row page_text_color">
            <div class="col-xs-12">
                <strong>@Html.DisplayNameFor(model => model.CurrentlyWorkingOnMessage)</strong><br />
                @Html.DisplayFor(model => model.CurrentlyWorkingOnMessage)<br />
                <br />
            </div>
        </div>
    }
</div>
