@model DCC_PortfolioSite.Models.ProjectSpotlight

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditProject</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    <div class="row light_background">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 corner_radius">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ProjectSpotlightID, new { htmlAttributes = new { @class = "form-control" } })

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProjectName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Technologies, htmlAttributes: new { @class = "control-label col-md-2" }) (separated by spaces)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Technologies, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Technologies, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DevelopmentTime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DevelopmentTime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DevelopmentTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RepoLink, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RepoLink, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RepoLink, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProjectDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.ProjectDescription, 15, 80, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProjectDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update and Preview" class="btn btn-default" />
                            <button type="button" onclick="window.open('', '_self', ''); window.close();">Close</button>
                        </div>
                    </div>

                </div>
            }
            <br />
            <div>
                @using (Html.BeginForm("ImageUploadPhotoEdit1", "Admin",
      FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @*<div>Select Photo to Upload</div>*@
                    <label for="image1">Select File for Image 1</label>

                    <input name="image1" type="file">
                    @Html.HiddenFor(model => model.ProjectSpotlightID, new { htmlAttributes = new { @class = "form-control" } })
                    <input type="submit" value="Upload Image 1" />
                }
            </div>
            <br />
            <div>
                @using (Html.BeginForm("ImageUploadPhotoEdit2", "Admin",
      FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @*<div>Select Photo to Upload</div>*@
                    <label for="image2">Select File for Image 2</label><input name="image2" type="file">
                    @Html.HiddenFor(model => model.ProjectSpotlightID, new { htmlAttributes = new { @class = "form-control" } })
                    <input type="submit" value="Upload Image 2" />
                }
            </div>



        </div>
    </div>
    <hr />
    <br />
    @Html.Partial("_ProjectPreviewPartialView")
    @Scripts.Render("~/Scripts/editProjectWindow.js")
</body>
</html>
