@model IEnumerable<DCC_PortfolioSite.Models.ContactProfile>

@{
    ViewBag.Title = "Alumni Network";
}



<div class="row">
    <div class="corner_radius col-xs-12 col-sm-10 col-sm-offset-1 text-center">
        <h1>Welcome to the devCodeCamp Alumni Network</h1>
        <br /><br />
        <h2>Search Profiles and Projects</h2>
        @using (Html.BeginForm("Search", "Home"))
        {
            @Html.Editor("tb_SearchBox");
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Search</button>
        }

        <br />
    </div>
</div>
@if (Model != null)
{
    <div class="row">
        <div id="SearchResults" class="corner_radius col-xs-12 col-sm-10 col-sm-offset-1">
            <div class="SearchResultsCarousel">
                @foreach (var item in Model)
                {
                    <div>
                        @{
                    string FullName = item.FirstName + " " + item.LastName;
                    <a href="~/UserProfile/Index/@item.ProfileId">
                        <img class="media-object thumbnail" src=@item.Photo height="150" width="150" />
                        <span class="badge">@Html.ActionLink(@FullName, "Index", "UserProfile", new { id = @item.ProfileId }, null)</span>
                    </a>
                        }
                    </div>
                }
            </div>
        </div>

    </div>
}