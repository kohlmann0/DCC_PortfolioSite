@model IEnumerable<DCC_PortfolioSite.Models.ContactProfile>

@{
    ViewBag.Title = "Alumni Network";
}



<div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12 text-center">
        <h1>Welcome to the devCodeCamp Alumni Network</h1>
        <br /><br />
        <h2>Search Profiles and Projects</h2>        
        @using (Html.BeginForm("Search", "Home"))
        {
            @Html.Editor("tb_SearchBox");
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Search</button>
        }

        <br />
    </div>
</div>
@if (Model != null)
{
    <div class="row">
        <div id="SearchResults" class="col-xs-12">
            <div class="SearchResultsCarousel">
                @foreach (var item in Model)
                {
                    <div>
                        @{
                            string FullName = item.FirstName + " " + item.LastName;
                            <img class="media-object thumbnail" src="~/Content/ProfilePic.jpg" hieght="150px" width="150px"/>
                            <span class="banner">@Html.ActionLink(@FullName, "Index", "UserProfile", null, item.UserId)</span>
                        }
                    </div>
                    @*@Html.DisplayFor(modelItem => item.FirstName)
                    @Html.DisplayFor(modelItem => item.LastName)*@
                }
            </div>        
        </div>
    </div>
}